<core:View xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:table="sap.ui.table" controllerName="com.ril.track.view.Master">
	<Page id="productListPage" title="{i18n>masterTitle}" showNavButton="true" navButtonPress="onNavBack">
		<Panel id="masterPanel" class="sapUiMediumMarginTop sapUiLargeMarginBeginEnd" width="auto">
			<content>
				<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="__form0">
					<sap.ui.layout.form:content>
						<sap.ui.core:Title/>
						<!--<core:Title text="Team Member Details" id="__title0"/>-->
						<Label text="Sr No." id="__label0"/>
						<Input width="92%" id="__input0" editable="true" maxLength="10" visible="false"/>
						<Label text="Name" id="__label4"/>
						<Input width="92%" id="__input4" placeholder="Enter Name" showValueStateMessage="false" tooltip="Enter Name" editable="true" maxLength="40" liveChange="handleNameInput"/>
						<Label text="Email ID" id="__label8"/>
						<Input type="Email" width="92%" placeholder="Enter Email" showValueStateMessage="false" tooltip="Enter Email" id="__input8" maxLength="35" liveChange="validateEmail"/>
						<Label text="Mobile Number" id="__label6"/>
						<Input width="92%" id="__input6" placeholder="Enter Mobile Number" showValueStateMessage="false" tooltip="Enter Mobile Number" maxLength="10" liveChange="handleMobileInput"/>
						<Label text="Extension" id="__labe7"/>
						<Input width="92%" id="__input7" placeholder="Enter Extension" showValueStateMessage="false"  tooltip="Enter Extension" maxLength="10" liveChange="handleExtnInput"/>
						<Label text="Track" id="__label2"/>
						<Input  width="92%" id="__input2"  placeholder="Enter Track" showValueStateMessage="false" tooltip="Enter Track" showValueHelp="true"  valueHelpOnly="true" valueHelpRequest="handleValueHelpTrack"/>
						<Label text="Sub Track" id="__label3" />
					  	<Input width="92%" id="__input3"  placeholder="Enter Sub Track" showValueStateMessage="false"  tooltip="Enter Sub Track" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="handleValueHelpSubTrack"/>
						<Label text="Organisation" id="__label5"/>
						<Input width="92%" id="__input5" placeholder="Enter Organisation" showValueStateMessage="false" tooltip="Enter Organisation" showValueHelp="true"  valueHelpOnly="true" valueHelpRequest="handleValueHelpOrg"/>
						<Label text="*User ID" id="__label1" visible="false"/>
						<Input width="92%" id="__input1" editable="true" showValueStateMessage="false" maxLength="12" liveChange="handleUserInput" visible="false"/>
						<Label text="Main Track" id="__label22" visible="false"/>
						<Input  width="92%" id="__input22" visible="false" showValueStateMessage="false" showValueHelp="true" placeholder="Main Track" valueHelpOnly="true" valueHelpRequest="handleValueHelpMTrack"/>
					
						
						<sap.ui.core:Title/>
						<Label text="Employee Code" id="__label10"/>
						<Input width="92%" id="__input10" maxLength="10" placeholder="Enter Employee Code" tooltip="Enter Employee Code" editable="true" showValueStateMessage="false" liveChange="EmpCodePress"/>
						<Label text="Work Station" id="__label9"/>
						<Input width="92%" id="__input9" maxLength="10" placeholder="Enter Work Station" tooltip="Enter Work Station" showValueStateMessage="false" liveChange="WorkStnPress"/>
						<Label text="Date of Joining" id="__label11"/>
						<DatePicker id="__input11" width="92%" visible="true" valueFormat="yyyy-MM-dd" placeholder="DD-MM-YYYY" displayFormat="dd-MM-yyyy" change="handleDate" required="true"/>
						<Label text="Replacement SR No." id="__label13"/>
						<Input width="92%" id="__input13" maxLength="10" visible="false"/>
						<Label text="Replacement" id="__label14" visible="false"/>
						<Input width="92%" id="__input14" maxLength="40"  visible="false" showValueHelp="true" placeholder="Replacement" valueHelpOnly="true" valueHelpRequest="handleValueHelpReplace"/>
						<Label text="Experties" id="__label15"/>
						<TextArea id="__input15" width="100%" maxLength="200" visible="false"/>
						<Label text="Induction Date" id="__label16" visible="false"/>
						<DatePicker id="__input16" width="92%" visible="false" valueFormat="yyyy-MM-dd" placeholder="DD-MM-YYYY" displayFormat="dd-MM-yyyy" change="handleDateInd" required="true"/>
						<Label text="Status of Team Member" id="__label17"/>
						<Input width="92%" id="__input17" showValueStateMessage="false" showValueHelp="true" placeholder="Enter Status of Team Member" tooltip="Enter Status of Team Member" valueHelpOnly="true" valueHelpRequest="handleValueHelpStatus"/>
						<Label text="Date of Release" id="__label12"/>
						<DatePicker id="__input12" width="92%" visible="true" valueFormat="yyyy-MM-dd" placeholder="DD-MM-YYYY" displayFormat="dd-MM-yyyy" change="handleDateRel" required="true"/>
						
						<Label text="Category" id="__label18"/>
						<Input width="92%" id="__input18" showValueStateMessage="false"  showValueHelp="true" placeholder="Enter Category" tooltip="Enter Category"  valueHelpOnly="true" valueHelpRequest="handleValueHelpCat"/>
						<Label text="Busy Till Date" id="__label19"/>
						<DatePicker id="__input19" width="92%" visible="false" valueFormat="yyyy-MM-dd" placeholder="DD-MM-YYYY" displayFormat="dd-MM-yyyy" change="handleDate" required="true"/>
						<Label text="New Allocation Date" id="__label20"/>
						<DatePicker id="__input20" width="92%" visible="false" valueFormat="yyyy-MM-dd" placeholder="DD-MM-YYYY" displayFormat="dd-MM-yyyy" change="handleDate" required="true"/>
					</sap.ui.layout.form:content>
				</sap.ui.layout.form:SimpleForm>
			
			</content>
		</Panel>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button type="Accept" tooltip="Save" press="onSavePress" icon="sap-icon://save" text="Save"/>
			</Toolbar>
		</footer>
	</Page>
</core:View>