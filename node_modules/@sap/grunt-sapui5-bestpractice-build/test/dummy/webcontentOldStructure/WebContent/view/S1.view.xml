<core:View xmlns="sap.m" xmlns:uxap="sap.uxap" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	height="100%" xmlns:ui="sap.ca.ui" xmlns:u="sap.ui.unified"
	controllerName="com.ril.IntMovMatPos.view.S1" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Page title="Material Downgrade Process" id="page1" class="sapUiSizeCompact"
		enableScrolling="true">
		<content>
			<Table id="TableId" includeItemInSelection="true" inset="false"
				class="sapUiSizeCompact" growing="true" growingScrollToLoad="true"
				items="{/results}">
				<columns>
					<Column hAlign="Left" demandPopin="true" minScreenWidth="Tablet"
						visible="false">
						<!--width="12em" width="15%" -->
						<Text text="Excise Invoice No." />
					</Column>
					<Column hAlign="Left" demandPopin="true" minScreenWidth="Tablet"
						width="15%">
						<!-- width="16em" -->
						<Text text="Material" />
					</Column>
					<Column hAlign="Left" demandPopin="true" minScreenWidth="Tablet">
						<!--width="7em" -->
						<Text text="Batch" />
					</Column>
					<Column hAlign="Right" demandPopin="true" minScreenWidth="Tablet">
						<!--width="12em" width="15%" -->
						<Text text="Total Quantity" />
					</Column>
					<Column hAlign="Left" demandPopin="true" minScreenWidth="Tablet">
						<!--width="6em" width="13.5%" -->
						<Text text="Storage Bin" />
					</Column>
					<Column hAlign="Left" demandPopin="true" minScreenWidth="Tablet">
						<!--width="13.5%" -->
						<Text text="Storage Type" />
					</Column>
					<Column hAlign="Left" demandPopin="true" minScreenWidth="Tablet">
						<!--width="20%" -->
						<Text text="Stock Type" />
					</Column>
					<Column hAlign="Left" demandPopin="true" minScreenWidth="Tablet">
						<!--width="20%" -->
						<Text text="" />
					</Column>

				</columns>
				<items>
					<ColumnListItem id="TableTemplate">
						<cells>
							<Text text="{InvNo}" visible="false" />
							<Text text="{MaterialDesc} ({Material})" />
							<Text text="{Batch}" />
							<!-- <Text text="{parts:[{path:'TotQty'},{path:'UOM'}], formatter: 
								'com.ril.IntMovMatPos.util.Formatter.Currency'}"/> -->
							<Text text="{TotQty}({UOM})" />
							<Text text="{SBinCode}" />
							<Text text="{StorageTypeDesc} ({StorageType})" />
							<Text text="{StockTypeDesc} ({StockType})" />

							<Button text="" icon="sap-icon://display-more" press="onDisplayPress"
								enabled="{path:'SBinCode', formatter: 'com.ril.IntMovMatPos.util.Formatter.ButtonVisible'}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<Bar id="FooterToolBar">
				<contentRight>
				<!-- 	<Button id="SaveUpldId" tooltip="Submit Material Downgrade"
						icon="sap-icon://create" text="Submit" type="Accept" enabled="true"
						press="SaveUpldPress" /> -->
					<!-- <Button id="ResetId" tooltip="Reset All Fields" icon="sap-icon://refresh"
						text="Reset" type="Emphasized" enabled="true" press="ResetPress" /> -->
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:View>