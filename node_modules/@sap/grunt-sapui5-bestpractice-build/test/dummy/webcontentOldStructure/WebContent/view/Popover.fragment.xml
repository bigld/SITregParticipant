<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Popover
		title="Select"   contentWidth="30%"
		class="sapUiSizeCompact"
		placement="Left"
			initialFocus="okPress" > 
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					id="okPress"
					text="OK"
					press="PopOkPress" />
			</Toolbar>
		</footer>
		<VBox>
			<RadioButton id="MatRD" groupName="GroupA" text="Material" selected="true" />
			<RadioButton id="BatRD" groupName="GroupA" text="Batch" />
			<RadioButton id="StkRD" groupName="GroupA" text="Stock Type" />
		</VBox>
	</Popover>
</core:FragmentDefinition>