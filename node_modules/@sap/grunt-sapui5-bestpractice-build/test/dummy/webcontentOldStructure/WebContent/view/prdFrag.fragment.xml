<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog title="Search Material" icon="sap-icon://search" id="dlg_prdSearch"
		class="sapUiSizeCompact" contentWidth="35%">
		<customHeader>
			<Bar>
				<contentRight>
					<Button icon="sap-icon://refresh" press="onPrdReset"
						tooltip="Reset" />
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<f:SimpleForm labelSpanL="4" labelSpanM="4" emptySpanL="1"
				emptySpanM="1" columnsL="1" columnsM="1" layout="ResponsiveGridLayout"
				editable="true" class="sapUiSizeCompact">
				<f:content>
					<core:Title text="" />
					<Label text="Code" id="frg_lb_pCd" tooltip="Material Code" />
					<Input id="frg_in_pCd" maxLength="22" />

					<Label text="Description" id="frg_lb_pDesc" tooltip="Description" />
					<Input id="frg_in_pDesc" maxLength="40" />
				</f:content>
			</f:SimpleForm>
			<Panel id="pnl_serTab" class="sapUiSizeCompact" visible="false">
				<Table id="tab_hdrPrd" inset="false" class="sapUiSizeCompact"
					showNoData="false">
					<columns>
						<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							<Text text="Material Code" />
						</Column>
						<!-- <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left"> -->
						<!-- <Text text="Material Description" /> -->
						<!-- </Column> -->
						<Column minScreenWidth="Tablet" id="col_scroll"
							demandPopin="true" hAlign="Left" visible="false" width="1.5%">
						</Column>
					</columns>
				</Table>
				<ScrollContainer id="scrl_serPrd" class="sapUiSizeCompact"
					vertical="true">
					<Table id="tab_itemPrd" inset="false" class="sapUiSizeCompact"
						itemPress="onRowClick" updateFinished="_setTableHeight" items="{/results}">
						<columns>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
							</Column>
							<!-- <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left"> -->
							<!-- </Column> -->
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center"
								width="7%">
							</Column>
						</columns>
						<items>
							<ColumnListItem id="TableTemplate" class="log_suggest">
								<cells>
									<Text text="{MaterialDesc} ({Material})" />
									<!-- <Text text="{MaterialDesc} ({Material})" /> -->
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</ScrollContainer>
			</Panel>
		</content>
		<beginButton>
			<Button text="Search" icon="sap-icon://search" press="onPrdSearch"
				type="Emphasized" tooltip="Search Material" />
		</beginButton>
		<endButton>
			<Button text="Close" press="onPrdClose" type="Emphasized"
				tooltip="Close" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>